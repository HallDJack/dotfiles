splitw -v -p 50 -t 3 -c ~/Code/popular-pays/social-scraper

# creator web app
neww -n cwa -c ~/Code/popular-pays/creators-web-app
selectw -t 4
splitw -h -p 30 -t 4 -c ~/Code/popular-pays/creators-web-app
splitw -v -p 50 -t 4 -c ~/Code/popular-pays/creators-web-app

# agency web app
