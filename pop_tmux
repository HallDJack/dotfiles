# Turn remain on exit on
set-remain-on-exit on

# popular pays session
new -s PopPays -n heroku
splitw -h -p 50 -t 0

# ppsuite
neww -n ppsuite -c ~/Code/popular-pays/ppsuite
selectw -t 1
splitw -h -p 30 -t 1 -c ~/Code/popular-pays/ppsuite
splitw -v -p 50 -t 1 -c ~/Code/popular-pays/ppsuite

# social-data
neww -n social-data -c ~/Code/popular-pays/social-data
selectw -t 2
splitw -h -p 30 -t 2 -c ~/Code/popular-pays/social-data
splitw -v -p 50 -t 2 -c ~/Code/popular-pays/social-data

# social-scraper
neww -n social-scraper -c ~/Code/popular-pays/social-scraper
