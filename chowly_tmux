# Turn remain on exit on
# set-remain-on-exit on

# Chowly session
new -s Chowly

# chowly api
neww -n chowly -t 1 -c ~/Code/chowly-inc/chowly
selectw -t 1
splitw -h -p 30 -t 1 -c ~/Code/chowly-inc/chowly
splitw -v -p 30 -t 1 -c ~/Code/chowly-inc/chowly
splitw -v -p 30 -t 1 -c ~/Code/chowly-inc/chowly

# plaunch
neww -n plaunch -c ~/Code/chowly-inc/plaunch
selectw -t 2
splitw -h -p 30 -t 2 -c ~/Code/chowly-inc/plaunch
splitw -v -p 50 -t 2 -c ~/Code/chowly-inc/plaunch

# dejeuner
neww -n dejeuner -c ~/Code/chowly-inc/dejeuner
selectw -t 3
splitw -h -p 30 -t 3 -c ~/Code/chowly-inc/dejeuner
splitw -v -p 30 -t 3 -c ~/Code/chowly-inc/dejeuner
splitw -v -p 30 -t 3 -c ~/Code/chowly-inc/dejeuner

# aperitif
neww -n aperitif -c ~/Code/chowly-inc/aperitif
selectw -t 4
splitw -h -p 30 -t 4 -c ~/Code/chowly-inc/aperitif
splitw -v -p 50 -t 4 -c ~/Code/chowly-inc/aperitif

# dotfiles
neww -n dotfiles -t 9 -c ~/Code/dotfiles
selectw -t 9
splitw -h -p 50 -t 9 -c ~/Code/dotfiles

# select window 0
selectw -t 0
kill-window

# select window 1
selectw -t 1
